generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Transaction {
  id                String                   @id @default(uuid())
  name              String
  amount            Decimal                  @db.Decimal(10, 2)
  type              TransactionType
  category          TransactionCategory
  paymentMethod     TransactionPaymentMethod
  description       String?
  date              DateTime
  createdAt         DateTime                 @default(now())
  updatedAt         DateTime                 @updatedAt
  userId            String
  installment       Int?
  totalInstallments Int?
}

enum TransactionType {
  INCOME
  EXPENSE
  RECURRING_EXPENSE
  INVESTMENT
}

enum TransactionCategory {
  SALARY
  CRYPTO
  FREELANCE
  BONUS
  HOUSING
  FOOD
  TRANSPORT
  SHOPPING
  ENTERTAINMENT
  UTILITY
  INSURANCE
  TAXES
  HEALTH
  EDUCATION
  OTHER
}

enum TransactionPaymentMethod {
  CASH
  DEBIT_CARD
  CREDIT_CARD
  BANK_TRANSFER
  BANK_SLIP
  PIX
  PAYPAL
  BITCOIN
  CRYPTO
  OTHER
}
